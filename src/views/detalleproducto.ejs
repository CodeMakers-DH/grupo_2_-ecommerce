<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')%>
<body>
    <%- include('./partials/header-2')%>
    <%- include('./partials/menuResponsive')%>
    <div class="container-blur" id="filter"></div>

    <main class="main-article" id="main-detalle">

        <div class="slider-vh">

        <section id="main-section-index-2" class="slider-centro">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/imgs/autosinfondoblanco.png" class="d-block w-100" alt="..." id="banner-uno">
                  </div>
                  <div class="carousel-item">
                    <img src="/imgs/autosinfondoblanco.png" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="/imgs/autosinfondoblanco.png" class="d-block w-100" alt="...">
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
                
              </div>

        </section>
    </div>



        <div id="div-detalle">

        <div class="flex-texto">
            <p class="texto"><%= modelos.descripcion%></p>
            <i class="fas fa-solid fa-info"></i>
        </div>

        <div>
            <img src="\imgs\autosinfondoblanco.png" alt="Foto del producto" class="foto-principal">
        </div>

        <section class="scroll">

            <div class="flex-texto-2">
                <p class="texto"><%= modelos.descripcion%></p>
                <i class="fas fa-solid fa-info"></i>
            </div>


            <article>
                <div class="modelo-delivery">
                    <h2 class="titulo-modelo"><%= modelos.nombreModelo%> </h2>
                    <h2 id="idModelo" hidden><%= modelos.idModelo%></h2>
                    <h3>Delivery estimado: <%= modelos.deliveryEstimado%> días</h3>
                </div>
            

                <div class="caracteristicas">
                    <h4>
                        Autonomía
                    </h4>
                    <h5>
                        <%= modelos.autonomia %> Kilómetros
                    </h5>

                    <h4>
                        Velocidad Máxima
                    </h4>
                    <h5>
                        <%= modelos.velocidadMaxima %> kilómetros por hora
                    </h5>

                    <h4>
                        Tiempo De Cero A Cien
                    </h4>
                    <h5>
                        <%= modelos.tiempoDeCeroCien %> segundos
                    </h5>
                

                    <div class="precio-auto">
                        <p class="precio">Precio</p>
                        <p class="numero">$<%= modelos.precio%> .000.000</p>
                    </div>

                </div>

            </article>

            <article class="article-pintura">
                <div  class="auto-pintura">
                    <img src="\imgs\autosinfondoblanco.png" alt="Foto del producto">
                </div>

                <h4>Pintura</h4>

                <div class="flex-circle">
                    <i class="fas fa-solid fa-circle" id="plateado"></i>
                    <i class="fas fa-solid fa-circle" id="gris-oscuro"></i>
                    <i class="fas fa-solid fa-circle" id="azul"></i>
                    <i class="fas fa-solid fa-circle" id="negro"></i>
                    <i class="fas fa-solid fa-circle" id="rojo"></i>
                </div>

                <div class="desc-color">
                    <p class="color-pintura">Color nombre</p>
                    <p class="precio-pintura">$1,000</p>
                </div>
            </article>




            <article class="article-ruedas">
                <div class="auto-ruedas">
                    <img src="\imgs\autosinfondoblanco.png" alt="Foto del producto">
                </div>

                <h4>Ruedas</h4>

                <div class="flex-circle-dos">
                    <i class="fas fa-solid fa-circle"></i>
                    <i class="fas fa-solid fa-circle"></i>
                </div>

                <div class="desc-ruedas">
                    <p class="nombre-rueda">Ruedas nombre</p>
                    <p class="precio-rueda">$2,000</p>
                </div>
            </article>

            <article class="add">
                <a href="/carrito">
                    <button type="button" id="carrito">AÑADIR AL CARRITO</i></button>
                </a>
            </article>

            <article class="add">
                <a href="/products/edit/<%= modelos.idModelo%>">
                    <button type="button">EDITAR PRODUCTO</i></button>
                </a>
            </article>



        </section>

    </div>



    </main>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.8/plugins/jquery.ScrollMagic.min.js"></script>

    <script src="/js/main.js" type="module"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/js/comprarCarrito.js" type="module"></script>
</body>
</html>
