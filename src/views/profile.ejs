<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')%>
<body class="body-login">

    <%- include('./partials/header-2')%>
    <%- include('./partials/menuResponsive')%>
    <div class="container-blur" id="filter"></div>
    
    <main>
        <article class="perfil">
            <div>

                <div class="img-profile">
                <% if(user.imgPerfil != null) { %>
                    <img src="/imgs/imgsPerfil/<%= user.imgPerfil%>" alt="Imágen de perfil">
                <% } %> 

                <% if(user.imgPerfil == null) { %>
                    <img src="/imgs/imgsPerfil/default.png" alt="Imágen de perfil"></div>
                <% } %>
                </div>


                <form action="/profile/<%=locals.userLogged.idUsuario%>/edit?_method=PUT" method="POST" class="form-change-img" enctype="multipart/form-data">

                        <div class="change-img">
                            <p class="text-image"></p>
                            <% if(locals.errors && errors.imgProfile) { %>
                                <div class="text-danger">
                                    <%= errors.imgProfile.msg %>
                                </div>
                            <% } %>

                            <label for="imgProfile" class="change-label">Cambiar imágen de perfil</label>
                            <input type="file" name="imgProfile" id="imgProfile" class="img-create">
    
                            <div class="div-img">
                                <button type="submit" class="boton-change">Subir imágen</button>
                            </div>
    
                            <h1 class="name-profile"><%= user.nombres + " " + user.apellidos%> </h1>
                            <h2 class="mail-profile"><%= user.email %> </h2>

                        </div>
                </form>
                
                <button type="button" class="log-out"><a href="/users/logout">Cerrar sesión</a></button>

        </article>
    
    </main>

        <%- include('./partials/footer-2')%>
        <script src="/js/main.js" type="module"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
    </html>