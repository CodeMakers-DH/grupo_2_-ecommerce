<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')%>
<body>
    <%- include('./partials/header-2')%>
    <%- include('./partials/menuResponsive')%>
<main class="main-inv">
    <h1 class="inventario">Inventario</h1>

    <section class="seccion-inv">
        <form class="form-inv">
            <h2>Modelos</h2>

            <div class="interests">
                <div>
                    <input type="checkbox" name="interests" id="modelouno">
                    <label for="modelouno">Modelo 1</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" id="modelodos">
                    <label for="modelodos">Modelo 2</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" id="modelotres">
                    <label for="modelotres">Modelo 3</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" id="modelocuatro">
                    <label for="modelocuatro">Modelo 4</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" id="modelocinco">
                    <label for="modelocinco">Modelo 5</label>
                </div>
            </div>

            <h2>Colores</h2>


            <div class="interests">
                <div>
                    <input type="checkbox" name="interests" id="coloruno">
                    <label for="coloruno">Color 1</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" id="colordos">
                    <label for="colordos">Color 2</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" id="colortres">
                    <label for="colortres">Color 3</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" id="colorcuatro">
                    <label for="colorcuatro">Color 4</label>
                </div>
            </div>


            <h2>Ruedas</h2>

            <div class="interests">
                <div>
                    <input type="checkbox" name="interests" id="ruedasuno">
                    <label for="ruedasuno">Tipo 1</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" id="ruedasdos">
                    <label for="ruedasdos">Tipo 2</label>
                </div>
            </div>

        </form>


        <article class="productos-article">
            <% for(i=0; i<productosParseados.length; i++) { %>
                    <div class="div-producto">
                        <a href="/products/detalleproducto/<%= productosParseados[i].idModelo %>">
                            <img src="/imgs/products/<%=productosParseados[i].imgModelo%>" alt="imagen de producto">
                        </a>
                        <h3><%= productosParseados[i].nombreModelo %></h3>
                        <h4><%= productosParseados[i].precio %></h4>
                    </div>

            <% } %>

        </article>
    </section>
</main>

<footer id="footer-productos">

    <div class="copy-carrito">
        <p class="car-productos">CarMakers © 2022</p>
    </div>

    <div class="links-productos">
        <a href="/sobrenosotros.html">Sobre Nosotros</a>
        <a href="/terminos.html">Términos y Condiciones</a>
    </div>

</footer>

    <script src="/js/main.js" type="module"></script>
</body>
</html>